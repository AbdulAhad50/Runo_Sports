{
  "compilerOptions": {
    "target": "ES2020",               
    "lib": ["dom", "es2020"],         
    "strict": true,                   
    "moduleResolution": "node",       
    "esModuleInterop": true,          
    "skipLibCheck": true,             
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"                // Enables the new JSX transform for React 17+
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
